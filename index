  <script>
    document.getElementById("financeForm").addEventListener("submit", async function(e) {
      e.preventDefault();

      const form = e.target;
      const formData = new FormData(form);
      const params = new URLSearchParams();

      for (const pair of formData.entries()) {
        params.append(pair[0], pair[1]);
      }

      try {
        const response = await fetch('https://script.google.com/macros/s/AKfycbzrNY8lwourtXq0xRI1v74IHum0ccuMkBiWpJO4Y4rv5SHl4WkA9ym_rTYKi1wcETuCSQ/exec', {
          method: 'POST',
          body: params
        });

        if (response.ok) {
          form.reset();
          document.getElementById("successMessage").style.display = "block";
        } else {
          alert("Erro ao enviar. Tente novamente mais tarde.");
        }
      } catch (error) {
        console.error(error);
        alert("Erro de conexão. Tente novamente.");
      }
    });
  </script>

